{
    "name": "impress-org/give",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "description": "GiveWP - a WordPress Donation Plugin and Fundraising Platform",
    "homepage": "https://givewp.com/",
    "require": {
        "composer/installers": "~1.2",
        "tecnickcom/tcpdf": "^6.2",
        "stripe/stripe-php": "^6.41"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "*",
        "wp-coding-standards/wpcs": "*",
        "wimg/php-compatibility": "*"
    },
    "keywords": [
        "wordpress",
        "plugin",
        "donations"
    ],
    "support": {
        "issues": "https://github.com/impress-org/give/issues"
    },
    "scripts": {
        "post-install-cmd": [
            "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs || true"
        ],
        "post-update-cmd": [
            "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs || true"
        ]
    },
    "autoload": {
        "psr-4": {
            "Give\\": "src/"
        },
        "files": [
            "src/Helpers/Form/Template/Template.php",
            "src/Helpers/Form/Template/Utils/Admin.php",
            "src/Helpers/Form/Template/Utils/Frontend.php",
            "src/Helpers/Form/Utils.php",
            "src/Helpers/Frontend/Shortcode.php",
            "src/Helpers/Utils.php",
            "src/Helpers/Donor/Donor.php"
        ]
    }
}
